{% extends 'sbadmin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block final_stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
{% endblock %}

{% block content %}

                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Gestion des catégories</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item">Catégories</li>
                            <li class="breadcrumb-item active">Liste</li>
                        </ol>

                        <a href="{{ path('admin_category_add') }}" class="btn btn-primary">Ajouter</a>

                        <!-- Tableau -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Liste des catégories
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Slug</th>
                                            <th>Parent</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {% for category in categories %}                                        
                                            <!-- Une ligne du tableau -->
                                            <tr>
                                                <td>{{ category.id }}</td>
                                                <td>{{ category.name }}</td>
                                                <td>{{ category.slug }}</td>
                                                <td>{{ category.parent }}</td>
                                                <td>
                                                    <a href="{{ path('admin_category_update', {id: category.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                                    <a href="{{ path('admin_category_delete', {id: category.id, _csrf_token: csrf_token('delete')}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Etes-vous certain ?')">Supprimer</a>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Slug</th>
                                            <th>Parent</th>
                                            <th>Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

{% endblock %}

{% block final_javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="{{ asset('sbadmin/js/datatables-simple-demo.js') }}"></script>
{% endblock %}

